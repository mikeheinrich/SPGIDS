{
  "name": "accordion-component",
  "version": "1.0.0",
  "description": "Accordion component for S&P Global Design System - expandable/collapsible content sections",
  "type": "component",
  "structure": {
    "base": {
      "path": "base/",
      "description": "Shared base styles for all implementations",
      "files": ["base.css"]
    },
    "implementations": {
      "vanilla": {
        "path": "vanilla/",
        "description": "Vanilla JavaScript/CSS implementation",
        "files": ["accordion-component.css", "accordion-component.js", "accordion-example.html", "README.md"]
      },
      "primeng-angular": {
        "path": "primeng-angular/",
        "description": "PrimeNG Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-angular": {
        "path": "kendo-angular/",
        "description": "Kendo UI for Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-react": {
        "path": "kendo-react/",
        "description": "Kendo UI for React implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      }
    }
  },
  "dependencies": {
    "base-styles": "required",
    "css-variables": "required"
  },
  "specifications": {
    "source": "Adobe XD",
    "header": {
      "dimensions": "flexible width × 32px height (closed)",
      "states": ["default", "hover", "open", "disabled"],
      "fontSize": "16px",
      "fontWeight": "400 (default), 700 (hover/open)"
    },
    "default": {
      "background": "#ffffff",
      "textColor": "#1a1a1a",
      "topBorder": "2px solid #5c5c5c"
    },
    "hover": {
      "background": "#ffffff",
      "textColor": "#32363b",
      "fontWeight": "700",
      "topBorder": "2px solid #d6002a",
      "boxShadow": "0 1px 2px rgba(0, 0, 0, 0.1)"
    },
    "open": {
      "background": "#ffffff",
      "textColor": "#32363b",
      "fontWeight": "700",
      "topBorder": "2px solid #d6002a",
      "boxShadow": "0 1px 2px rgba(193, 197, 202, 0.6)",
      "iconRotation": "90deg (pointing down)"
    },
    "icon": {
      "color": "#d6002a",
      "size": "14px × 14px",
      "position": "right: 9.5px",
      "rotation": "0deg (closed/right), 90deg (open/down)"
    }
  },
  "browserSupport": {
    "cssVariables": true,
    "flexbox": true,
    "modernBrowsers": true,
    "transitions": true
  }
}

