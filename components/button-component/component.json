{
  "name": "button-component",
  "version": "1.0.0",
  "description": "Primary and secondary button components for S&P Global Design System",
  "type": "component",
  "structure": {
    "base": {
      "path": "base/",
      "description": "Shared base styles for all implementations",
      "files": ["base.css"]
    },
    "implementations": {
      "vanilla": {
        "path": "vanilla/",
        "description": "Vanilla JavaScript/CSS implementation",
        "files": ["button-component.css", "button-example.html", "README.md"]
      },
      "primeng-angular": {
        "path": "primeng-angular/",
        "description": "PrimeNG Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-angular": {
        "path": "kendo-angular/",
        "description": "Kendo UI for Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-react": {
        "path": "kendo-react/",
        "description": "Kendo UI for React implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      }
    }
  },
  "dependencies": {
    "base-styles": "required",
    "css-variables": "required"
  },
  "specifications": {
    "source": "Adobe XD",
    "primary": {
      "dimensions": "auto (min 90px) × 32px",
      "states": ["default", "hover", "disabled", "disabled-hover"],
      "style": "filled",
      "iconSupport": true
    },
    "secondary": {
      "dimensions": "auto (min 87px) × 32px",
      "states": ["default", "hover", "disabled", "disabled-hover"],
      "style": "outlined",
      "hoverBackground": "#eeeeee",
      "iconSupport": true
    },
    "link": {
      "dimensions": "auto × min 32px",
      "states": ["default", "hover", "disabled", "disabled-hover"],
      "style": "text-only",
      "hoverEffect": "text-darkens",
      "iconSupport": true
    }
  },
  "browserSupport": {
    "cssVariables": true,
    "flexbox": true,
    "modernBrowsers": true
  }
}
