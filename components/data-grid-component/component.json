{
  "name": "data-grid-component",
  "version": "1.0.0",
  "description": "Data grid component using AG-Grid with design system styling",
  "type": "component",
  "structure": {
    "base": {
      "path": "base/",
      "description": "Shared base styles for all implementations",
      "files": ["base.css"]
    },
    "implementations": {
      "vanilla": {
        "path": "vanilla/",
        "description": "Vanilla JavaScript/CSS implementation using AG-Grid",
        "files": ["data-grid-component.css", "data-grid-component.js", "data-grid-example.html", "README.md"]
      },
      "primeng-angular": {
        "path": "primeng-angular/",
        "description": "PrimeNG Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-angular": {
        "path": "kendo-angular/",
        "description": "Kendo UI for Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-react": {
        "path": "kendo-react/",
        "description": "Kendo UI for React implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      }
    }
  },
  "dependencies": {
    "ag-grid": "required",
    "ag-grid-community": "required",
    "base-styles": "required",
    "css-variables": "required"
  },
  "specifications": {
    "source": "AG-Grid with Design System Styling",
    "features": [
      "Sortable columns",
      "Row selection with checkboxes",
      "Column pinning",
      "Column resizing",
      "Column filtering",
      "Column grouping",
      "Column menu with options",
      "Custom cell rendering",
      "Row hover effects"
    ],
    "styling": {
      "border": "1px solid var(--color-gray-2)",
      "borderRadius": "var(--radius-md)",
      "headerBackground": "var(--color-gray-bg)",
      "headerTextColor": "var(--color-gray-5)",
      "rowHover": "var(--color-gray-bg)",
      "cellPadding": "var(--spacing-xs) var(--spacing-sm)"
    }
  },
  "browserSupport": {
    "cssVariables": true,
    "flexbox": true,
    "javascript": true,
    "modernBrowsers": true
  }
}


