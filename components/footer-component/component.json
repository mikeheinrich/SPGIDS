{
  "name": "footer-component",
  "version": "1.0.0",
  "description": "Collapsible footer component with copyright, links, and logo for S&P Global Design System",
  "type": "component",
  "structure": {
    "base": {
      "path": "base/",
      "description": "Shared base styles for all implementations",
      "files": ["base.css"]
    },
    "implementations": {
      "vanilla": {
        "path": "vanilla/",
        "description": "Vanilla JavaScript/CSS implementation",
        "files": ["footer-component.css", "footer-component.js", "footer-example.html", "README.md"]
      },
      "primeng-angular": {
        "path": "primeng-angular/",
        "description": "PrimeNG Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-angular": {
        "path": "kendo-angular/",
        "description": "Kendo UI for Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-react": {
        "path": "kendo-react/",
        "description": "Kendo UI for React implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      }
    }
  },
  "dependencies": {
    "base-styles": "required",
    "css-variables": "required",
    "javascript": "required"
  },
  "features": [
    "Fixed position footer",
    "Collapsible/expandable",
    "Auto-updating copyright year",
    "Footer links (Terms, Privacy, Customer Care)",
    "S&P Global logo",
    "Smooth toggle animation",
    "Auto-initialization",
    "Responsive design",
    "Accessibility support"
  ],
  "browserSupport": {
    "cssVariables": true,
    "flexbox": true,
    "javascript": "ES6+",
    "modernBrowsers": true
  },
  "configuration": {
    "autoInitialize": true,
    "manualInit": "initFooter() function available"
  }
}
