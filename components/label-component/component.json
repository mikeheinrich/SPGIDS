{
  "name": "label-component",
  "version": "1.0.0",
  "description": "Label component for S&P Global Design System - colored tags without remove button",
  "type": "component",
  "structure": {
    "base": {
      "path": "base/",
      "description": "Shared base styles for all implementations",
      "files": ["base.css"]
    },
    "implementations": {
      "vanilla": {
        "path": "vanilla/",
        "description": "Vanilla JavaScript/CSS implementation",
        "files": ["label-component.css", "label-component.js", "label-example.html", "README.md"]
      },
      "primeng-angular": {
        "path": "primeng-angular/",
        "description": "PrimeNG Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-angular": {
        "path": "kendo-angular/",
        "description": "Kendo UI for Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-react": {
        "path": "kendo-react/",
        "description": "Kendo UI for React implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      }
    }
  },
  "dependencies": {
    "base-styles": "required",
    "css-variables": "required"
  },
  "specifications": {
    "source": "Design System",
    "variants": {
      "default": {
        "borderColor": "Gray (#5c5c5c)",
        "textColor": "Gray (#5c5c5c)"
      },
      "success": {
        "borderColor": "Green (#009900)",
        "textColor": "Green (#009900)"
      },
      "info": {
        "borderColor": "Purple (#782080)",
        "textColor": "Purple (#782080)"
      },
      "attention": {
        "borderColor": "Orange (#C56C00)",
        "textColor": "Orange (#C56C00)"
      }
    },
    "dimensions": {
      "padding": "4px 10px",
      "borderRadius": "2px"
    },
    "features": {
      "coloredVariants": true,
      "noRemoveButton": true
    }
  },
  "browserSupport": {
    "cssVariables": true,
    "flexbox": true,
    "modernBrowsers": true
  }
}


