{
  "name": "left-nav-component",
  "version": "1.0.0",
  "description": "Left navigation component for S&P Global Design System - hierarchical navigation with GP and Fund structure",
  "type": "component",
  "structure": {
    "base": {
      "path": "base/",
      "description": "Shared base styles for all implementations",
      "files": ["base.css"]
    },
    "implementations": {
      "vanilla": {
        "path": "vanilla/",
        "description": "Vanilla JavaScript/CSS implementation",
        "files": ["left-nav-component.css", "left-nav-component.js", "left-nav-example.html", "README.md"]
      },
      "primeng-angular": {
        "path": "primeng-angular/",
        "description": "PrimeNG Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-angular": {
        "path": "kendo-angular/",
        "description": "Kendo UI for Angular implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      },
      "kendo-react": {
        "path": "kendo-react/",
        "description": "Kendo UI for React implementation",
        "status": "coming-soon",
        "files": ["README.md"]
      }
    }
  },
  "dependencies": {
    "base-styles": "required",
    "css-variables": "required"
  },
  "specifications": {
    "source": "Based on Investor Portal",
    "container": {
      "width": "361px",
      "background": "#f8f8f8",
      "border": "1px solid #eaeef3 (right border)"
    },
    "item": {
      "dimensions": "100% width Ã— 32px height",
      "states": ["default", "hover", "active"],
      "fontSize": "16px"
    },
    "gp": {
      "paddingLeft": "10px",
      "fontWeight": "700",
      "color": "#32363b"
    },
    "fund": {
      "paddingLeft": "20px",
      "fontWeight": "400",
      "color": "#32363b"
    },
    "active": {
      "background": "#f0f0f0",
      "textColor": "#d6002a",
      "accentBar": "3px solid #d6002a (top border)"
    }
  },
  "browserSupport": {
    "cssVariables": true,
    "flexbox": true,
    "modernBrowsers": true
  }
}

